<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/about_margin_left"
        android:layout_marginTop="@dimen/about_margin_top"
        android:layout_marginRight="@dimen/about_margin_left"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/action_about"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/about_margin_left"
        android:layout_marginRight="@dimen/about_margin_left"
        android:layout_marginTop="@dimen/about_margin"
        android:text="@string/about_author"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/about_margin_left"
        android:layout_marginRight="@dimen/about_margin_left"
        android:layout_marginTop="@dimen/about_margin"
        android:autoLink="email"
        android:text="@string/about_mail"/>

    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/about_margin_left"
        android:layout_marginRight="@dimen/about_margin_left"
        android:layout_marginTop="@dimen/about_margin"
        android:layout_marginBottom="@dimen/about_margin_buttom"
        android:text="v1.1"/>

</LinearLayout>
